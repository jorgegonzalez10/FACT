<div class="dashboard">
  <div class="dashboard__charts">
    <div class="dashboard__card">
      <h2 class="dashboard__title">Clientes registrados por mes</h2>
      <%= line_chart @clientes_por_mes, height: '250px' %>
    </div>

    <div class="dashboard__card">
      <h2 class="dashboard__title">Empresas registradas por mes</h2>
      <%= line_chart @empresas_por_mes, height: '250px' %>
    </div>

    <div class="dashboard__card">
      <h2 class="dashboard__title">Proporción de Clientes vs Empresas</h2>
      <%= pie_chart @resumen_por_tipo, colors: ["#1679AB", "#FFB1B1"], height: '250px' %>
    </div>
  </div>

  <div class="dashboard__totals">
    <div class="dashboard__summary-card">
      <h5>Total de Clientes</h5>
      <p class="dashboard__summary-value"><%= @total_clients %></p>
    </div>
    <div class="dashboard__summary-card">
      <h5>Total de Empresas</h5>
      <p class="dashboard__summary-value"><%= @total_companies %></p>
    </div>
  </div>

  <div class="dashboard__latest">
    <h2 class="dashboard__title">Últimos Clientes Registrados</h2>
    <ul>
      <% @ultimos_clientes.each do |cliente| %>
        <li><strong><%= cliente.name %></strong> - <%= cliente.created_at.strftime("%B %d, %Y") %></li>
      <% end %>
    </ul>
  </div>
</div>

<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "FACT-logo.png", style: "height: 50px; width: auto;" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-sm-0">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Home", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Messages", "#", class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item me-3">
          <%= link_to "Planes", "#plans", class: "nav-link" %>
            </li>
        <li class="nav-item me-3">
          <%= link_to "Sobre Nosotros", "#about", class: "nav-link" %>
            </li>
        <li class="nav-item me-3">
          <%= link_to "FAQ", "#faq", class: "nav-link" %>
            </li>
          <% end %>
      </ul>

<!-- SI ESTA LOGEADO -->

      <% if user_signed_in? %>
        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <a href="#" class="avatar nav-link dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar", alt: "dropdown menu" %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Mi Perfil", "#", class: "dropdown-item" %>
              <%= link_to "Configuración", "#", class: "dropdown-item" %>
              <%= link_to "Cerrar sesión", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item" %>
            </div>
          </li>
        </ul>
      <% else %>
        <div class="auth-buttons">
          <%= link_to "Iniciar Sesión", new_user_session_path, class: "btn btn-secondary-custom" %>
          <%= link_to "Registrarse", new_user_registration_path, class: "btn btn-primary-custom" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

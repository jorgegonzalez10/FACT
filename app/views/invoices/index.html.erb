<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">Facturas</h1>
    <%= link_to "Nueva Factura", new_invoice_path, class: "btn btn-primary" %>
  </div>

  <div class="row">
    <% @invoices.each do |invoice| %>
      <div class="col-md-6 col-lg-4 mb-4">
        <div class="card h-100 shadow-sm">
          <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Factura #<%= invoice.id %></h5>
            <span class="badge bg-secondary"><%= invoice.created_at.strftime("%d/%m/%Y") %></span>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <h6 class="text-muted mb-1">Emisor:</h6>
              <p class="mb-0"><%= invoice.company.name %></p>
            </div>
            <div class="mb-3">
              <h6 class="text-muted mb-1">Cliente:</h6>
              <p class="mb-0"><%= invoice.client.fiscal_name %></p>
            </div>
            <div class="mb-3">
              <h6 class="text-muted mb-1">Total:</h6>
              <p class="h5 text-success">$<%= number_with_precision(invoice.total, precision: 2) %></p>
            </div>
          </div>
          <div class="card-footer bg-white d-flex justify-content-between">
            <%= link_to "Ver Detalle", invoice_path(invoice), class: "btn btn-outline-warning btn-sm" %>
            <%= button_to "Eliminar", invoice_path(invoice),
                  method: :delete,
                  data: { confirm: "¿Estás seguro de eliminar esta factura?" },
                  class: "btn btn-outline-danger btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @invoices.empty? %>
    <div class="alert alert-info text-center">
      No hay facturas registradas aún.
    </div>
  <% end %>
